<div class="container">
  <div class="row">
    <div class="offset-md-3 col-md-6">

    <div class="card">
      <div class="card-header d-flex">
        <h1 class="h6">
          All boards
        </h1>
        <button type="button" class="btn btn-outline-success btn-sm ms-auto" data-bs-toggle="modal" data-bs-target="#boardFormModal">
          Add a new button
        </button>
      </div>
      
      <div class="list-group list-group-flush">
        <% @list_of_boards.each do |a_board| %>
            <a href="/boards/<%= a_board.id %>" class="list-group-item list-group-item-action d-flex">
              <%= a_board.name %>
              <div class="ms-auto"><i class="fa-solid fa-chevron-right ms-auto"></i></div>
            </a>
        <% end %>
      </div>
    </div>
  </div>
</div>


<!-- Modal -->
<div class="modal fade" id="boardFormModal" tabindex="-1" aria-labelledby="boardFormModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="exampleModalLabel">New board</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">

        <form action="/insert_board" method="post">
          <div>
            <label for="name_box" class="form-label">
              Name
            </label>

            <input type="text" id="name_box" name="query_name" class="form-control mb-3" aria-describedby="passwordHelpBlock" >
          </div>
          <div class="d-grid gap-2">
            <button class="btn btn-success">
              Add board
            </button>
          </div>
        </form>

      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
      </div>
    </div>
  </div>
</div>
